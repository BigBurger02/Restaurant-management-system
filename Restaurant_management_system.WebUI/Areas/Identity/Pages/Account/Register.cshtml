                            <i class="fab fa-windows fa-fw"></i>
                            @ViewLocalizer["Microsoft"]
                        </button>
                        <button type="submit" name="provider" value="Twitter" title="Log in using your Twitter account" class="btn btn-user btn-block" style="color: white; background-color: rgb(75, 170, 235)">
                            <i class="fab fa-twitter fa-fw"></i>
                            @ViewLocalizer["Twitter"]
                        </button>
