@model List<Restaurant_management_system.WebUI.ViewModels.DishItemDTO>

@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer ViewLocalizer

@{
    ViewData["Title"] = ViewLocalizer["ViewName"];
}

<div class="col-lg-6 mb-4">
    <a asp-action="Cart" asp-route-orderID="@ViewData["orderID"]">
        <div class="card bg-primary text-white shadow">
            <div class="card-body">
                @ViewLocalizer["Cart"]
                <div class="text-white-50 small">@ViewLocalizer["Order"] @ViewData["orderID"]</div>
            </div>
        </div>
    </a>
</div>

<div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">@ViewLocalizer["Name"]</th>
                <th scope="col">@ViewLocalizer["Price"]</th>
                <th scope="col">@ViewLocalizer["Ingredients"]</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.Name</th>
                    <td>@item.Price</td>
                    <td>@item.IngredientsForCustomer</td>
                    <td>
                        <a asp-action="AddToCart" asp-route-orderID="@ViewData["orderID"]" asp-route-dishID="@item.ID" class="btn btn-success btn-circle btn-sm">
                            <i class="fas fa-cart-arrow-down"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>