@model List<Restaurant_management_system.WebUI.ViewModels.DishInOrderDTO>
@{
    ViewData["Title"] = "Table " + ViewData["TableID"];
}

<div>
    <h3>Table @ViewData["TableID"] - Order @ViewData["OrderID"]</h3>
    <div>
        <form method="POST" asp-route-tableID="@ViewData["TableID"]" asp-route-orderID="@ViewData["OrderID"]">
            <div class="form-group">
                <label for="message">Comment:</label>
            </div>
            <input type="hidden" name="@ViewData["OrderID"]" />
            <div class="form-group">
                <textarea placeholder="You can make comments about this order" name="message" cols="70" rows="3">@ViewData["Message"]</textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />
<div>
    <table>
        <thead>
            <tr>
                <th>Dish</th>
                <th>Time of oredring</th>
                <th>Cooked</th>
                <th>Taked from kitchen</th>
                <th>Prioritized</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.DishName</td>
                    <td>@item.TimeOfOrdering</td>
                    <td>@item.IsDone</td>
                    <td>@item.IsTakenAway</td>
                    <td>@item.IsPrioritized</td>
                    <td>
                        <a asp-action="EditDish" asp-route-dishID="@item.DishID" asp-route-tableID="@ViewData["TableID"]">Edit dish</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-action="AddDish" asp-route-orderID="@ViewData["OrderID"]" asp-route-tableID="@ViewData["TableID"]" class="btn btn-primary">Add dish</a>
</div>