@model List<Restaurant_management_system.WebUI.ViewModels.DishInOrderDTO>
@{
    ViewData["Title"] = "Table " + ViewData["TableID"];
}

<div>
    <h3>Table @ViewData["TableID"] - Order @ViewData["OrderID"]</h3>
    <div>
        <form method="POST" asp-route-tableID="@ViewData["TableID"]" asp-route-orderID="@ViewData["OrderID"]">
            <div class="form-group">
                <label for="message">Comment:</label>
            </div>
            <input type="hidden" name="@ViewData["OrderID"]" />
            <div class="form-group">
                <textarea placeholder="You can make comments about this order" name="message" cols="70" rows="3">@ViewData["Message"]</textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<br />

<div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Dish</th>
                <th scope="col">Time of oredring</th>
                <th scope="col">Cooked</th>
                <th scope="col">Taked from kitchen</th>
                <th scope="col">Prioritized</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.DishName</th>
                    <td>@item.TimeOfOrderingString</td>
                    <td>@item.IsDoneString</td>
                    <td>@item.IsTakenAwayString</td>
                    <td>@item.IsPrioritizedString</td>
                    <td>
                        <a asp-action="EditDishInOrder" asp-route-dishID="@item.DishID" asp-route-tableID="@ViewData["TableID"]">Edit</a>
                    </td>
                </tr>
            }
            <tr>
                <td>
                    <a asp-action="AddDishInOrder" asp-route-orderID="@ViewData["OrderID"]" asp-route-tableID="@ViewData["TableID"]">Add</a>
                </td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
                <td></td>
            </tr>
        </tbody>
    </table>
</div>