@model Restaurant_management_system.WebUI.ViewModels.DishWithTypesDTO
@{
    ViewData["Title"] = "Dish";
}

<div class="col-md-1">
    <form asp-action="EditDish" asp-route-tableID="@Model.TableID">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ID" />
        <select name="DishName" asp-for="DishName">
            <option value="0">None</option>
            <option value="Chicken Strips">Chicken Strips</option>
            <option value="French Dip">French Dip</option>
            <option value="Cobb Salad">Cobb Salad</option>
            <option value="Meat Loaf">Meat Loaf</option>
            <option value="Cannoli">Cannoli</option>
            <option value="ClubHouse">ClubHouse</option>
            <option value="Roast Pork">Roast Pork</option>
            <option value="Roast Beef">Roast Beef</option>
            <option value="White Pizza">White Pizza</option>
            <option value="Hamburger">Hamburger</option>
        </select>
        <div class="form-group">
            <input type="checkbox" asp-for="IsTakenAway" />
            <label asp-for="IsTakenAway" class="control-label">Taken Away</label>
            <span asp-validation-for="IsTakenAway" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="checkbox" asp-for="IsPrioritized" />
            <label asp-for="IsPrioritized" class="control-label">Prioritized</label>
            <span asp-validation-for="IsPrioritized" class="text-danger"></span>
        </div>

        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
</div>