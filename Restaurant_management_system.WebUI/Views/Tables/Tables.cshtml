@model List<Restaurant_management_system.WebUI.ViewModels.TableDTO>
@{
    ViewData["Title"] = "Tables";
}

<div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Occupied</th>
                <th scope="col">Guests</th>
                <th scope="col">Cost</th>
                <th scope="col">Paid</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.ID</th>
                    <td>@item.IsOccupiedString</td>
                    <td>@item.AmountOfGuests</td>
                    <td>@item.OrderCost</td>
                    <td>@item.IsPaidString</td>
                    <td>
                        <a asp-action="EditTableAndOrder" asp-route-tableID="@item.ID" class="btn btn-primary btn-circle btn-sm">
                            <i class="fas fa-info-circle"></i>
                        </a>
                    </td>
                    <td>
                        <a asp-action="ResetTable" asp-route-tableID="@item.ID" class="btn btn-danger btn-icon-split btn-sm">
                            <span class="icon text-white-50">
                                <i class="fas fa-undo"></i>
                            </span>

                        </a>
                    </td>
                    <td>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="" asp-route-tableID="@item.ID" class="btn btn-danger btn-icon-split btn-sm">
                                <span class="icon text-white-50">
                                    <i class="fas fa-trash"></i>
                                </span>

                            </a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>