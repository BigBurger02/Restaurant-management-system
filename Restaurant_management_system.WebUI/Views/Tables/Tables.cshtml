@model List<Restaurant_management_system.WebUI.ViewModels.TableDTO>
@{
    ViewData["Title"] = "Tables";
}

<div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Occupied</th>
                <th scope="col">Guests</th>
                <th scope="col">Cost</th>
                <th scope="col">Paid</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.ID</th>
                    <td>@item.IsOccupiedString</td>
                    <td>@item.AmountOfGuests</td>
                    <td>@item.OrderCost</td>
                    <td>@item.IsPaidString</td>
                    <td>
                        <a asp-action="EditTable" asp-route-tableID="@item.ID" class="card bg-primary text-white shadow">Edit table</a>
                    </td>
                    <td>
                        <a asp-action="EditOrder" asp-route-tableID="@item.ID" class="card bg-primary text-white shadow">Edit order</a>
                    </td>
                    <td>
                        <a asp-action="ResetTable" asp-route-tableID="@item.ID" class="card bg-primary text-white shadow">Reset table</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>