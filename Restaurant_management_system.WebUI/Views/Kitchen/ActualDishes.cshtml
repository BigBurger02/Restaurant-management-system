@model List<Restaurant_management_system.WebUI.ViewModels.DishInOrderDTO>

@using Microsoft.AspNetCore.Mvc.Localization

@inject IViewLocalizer ViewLocalizer

@{
    ViewData["Title"] = ViewLocalizer["Dishes"];
}

<h3>@ViewLocalizer["TodaysUnfinished"]</h3>

<div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">@ViewLocalizer["DishName"]</th>
                <th scope="col">@ViewLocalizer["TimeOfOrdering"]</th>
                <th scope="col">@ViewLocalizer["Prioritized"]</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td scope="row">@item.DishName</td>
                    <td>@item.TimeOfOrderingString</td>
                    <td>@item.IsPrioritizedString</td>
                    <td>
                        <a asp-action="Change_DONE_InDish" asp-route-dishID="@item.ID" class="btn btn-success btn-icon-split btn-sm">
                            <span class="icon text-white-50">
                                <i class="fas fa-check"></i>
                            </span>
                            <span class="text">@ViewLocalizer["Done"]</span>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

