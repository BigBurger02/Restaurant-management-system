@page
@model IdentityServer.Pages.Roles.AppointRoleModel
@{
}

<p>@Model.Info</p>

<div class="card-body">
    <form asp-page="/Roles/AppointRole">
        <div class="form-group">
            <label asp-for="Email"></label>
            <input class="form-control" placeholder="Email" asp-for="Email" autofocus>
        </div>
        <div class="form-group">
            <select name="Role.Id">
                @foreach (var item in Model.Roles)
                {
                    <option value="@item.Id">@item.Name</option>
                }
            </select>
        </div>

        <button class="btn btn-primary" type="submit">Appoint</button>
    </form>
</div>