@using Duende.IdentityServer.Extensions
@{
    string name = null;
    if (!true.Equals(ViewData["signed-out"]))
    {
        name = Context.User?.GetDisplayName();
    }
}

<div class="nav-page">
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a href="~/" class="navbar-brand">
                <img src="~/favicon.png" class="icon-banner">
                Big Branch Inc
            </a>
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    @if (string.IsNullOrWhiteSpace(name))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-page="/Account/Login/Index">Login</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-page="/Account/Signup/Index">Signup</a>
                        </li>
                    }
                    else
                    {
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-page="/Roles/AppointRole">Appoint role</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-page="/Diagnostics/Index">User info</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-page="/Account/Logout/Index">Logout</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</div>
